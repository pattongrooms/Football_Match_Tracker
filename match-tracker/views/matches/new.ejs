<%- include('../partials/header') %>

<h1>Game Detail Page</h1>
<h2>Views Matches New Page</h2>
<br>

<form id="match-form" action="/matches" method="POST">

<label>Team Name:
<input type="text" name="teamName">
</label>

<br>
<br>

<label>Home or Away:
<select name="homeOrAway">
  <option value="Home">Home</option>
  <option value="Away">Away</option>
</select>
</label>

<br>
<br>

<label>Game Location:
<input type="text" name="location">
</label>

<br>
<br>

<label>Stadium:
<input type="text" name="stadium">
</label>

<br>
<br>

<label>Opponent Record:
<input type="text" name="record">
</label>
<br>
<br>

<label>Result:
  <select name="result">
    <option value="Win">Win</option>
    <option value="Loss">Loss</option>
  </select>
  </label>
  <br>
  <br>
  <input type="submit" value="Add Game to Schedule">
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>