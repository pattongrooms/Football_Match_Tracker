<%- include('../partials/header') %>


<section id="show-page">
  <br>
  <div>Team Name: </div>
  <div><%= match.teamName %></div>
  <br>
  <div>Home or Away: </div>
  <div><%= match.homeOrAway %></div>
  <br>
  <div>Game Location: </div>
  <div><%= match.location %></div>
  <br>
  <div>Stadium: </div>
  <div><%= match.stadium %></div>
  <br>
  <div>Opponent Record: </div>
  <div><%= match.record %></div>
  <br>
  <div>Result: </div>
  <div><%= match.result %></div>
</section>

<br><br><h2>Game Log</h2>
<% if (user) { %>
<form id="add-log-form" method="POST"
  action="/matches/<%= match._id %>/gameinfos">
  <label>Offense:</label>
  <textarea name="offense"></textarea><br>
  <label>Defense:</label>
  <textarea name="defense"></textarea><br>
  <label>MVP:</label>
  <textarea name="mvp"></textarea><br>
  <label>Notes:</label>
  <textarea name="gameNote"></textarea><br>
  
  <input type="submit" value="Add Game Note">
</form>
<% } %>
<% if (match.gameInfos.length) { %>
  <table>
    <thead>
      <tr>
        <th>Offense</th>
        <th>Defense</th>
        <th>MVP</th>
        <th>Notes</th>
        
      </tr>
    </thead>
    <tbody>

      <% match.gameInfos.forEach(function(m) { %>
        <tr>
          <td><%= m.offense %></td>
          <td><%= m.defense %></td>
          <td><%= m.mvp %></td>
          <td><%= m.gameNote %></td>
        </tr>
      <% }) %>
      </tbody>
    </table>
<% } else { %>
  <h5>No Comments Yet</h5>

<% } %>

<%- include('../partials/footer') %>